@page "/favorites"
@using System.Security.Claims
@using Reelr.Data
@using Reelr.Services
@inject MovieService MovieService
@inject AuthenticationStateProvider AuthProvider
@implements IDisposable
@inject NavigationManager Navigation

<div class="container-fluid px-3 px-md-4">
    <div class="row">
        <div class="col-12 mt-4">
            @if (_favorites == null)
            {
                <div class="d-flex justify-content-center my-4">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            }
            else if (!_favorites.Any())
            {
                <div class="row justify-content-center">
                    <div class="col-12 col-md-8 col-lg-6">
                        <div class="card text-center shadow-sm">
                            <div class="card-body py-5">
                                <i class="bi bi-heart display-4 text-muted mb-3"></i>
                                <h4 class="card-title">No favorites yet!</h4>
                                <p class="text-muted">Start adding movies to your favorites by browsing and clicking the heart icon.</p>
                                <a href="/" class="btn btn-primary">
                                    <i class="bi bi-search me-2"></i>
                                    Browse Movies
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="row g-3">
                    @foreach (var movie in _favorites)
                    {
                        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                            <div class="card movie-card h-100">
                                <div class="position-relative">
                                    <img src="@($"https://image.tmdb.org/t/p/w500/{movie.PosterPath}")"
                                         alt="@movie.Title poster" class="card-img-top" />
                                    <div class="position-absolute top-0 end-0 p-2">
                                        <span class="badge bg-danger">
                                            <i class="bi bi-heart-fill"></i>
                                        </span>
                                    </div>
                                </div>
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title">@movie.Title</h5>
                                    <p class="card-text"><small class="text-muted">(@movie.ReleaseYear)</small></p>
                                    <p class="card-text flex-grow-1 text-truncate-3">
                                        @if (movie.Overview!.Length > 150)
                                        {
                                            @(movie.Overview.Substring(0, 150) + "...")
                                        }
                                        else
                                        {
                                            @movie.Overview
                                        }
                                    </p>
                                    <div class="mt-auto">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <strong>Rating:</strong>
                                                <span class="badge bg-warning text-dark">
                                                    <i class="bi bi-star-fill me-1"></i>
                                                    @(movie.VoteAverageTmdb?.ToString("0.0") ?? "N/A")
                                                </span>
                                            </div>
                                        </div>
                                        @if (!string.IsNullOrEmpty(movie.GenresString))
                                        {
                                            <p class="card-text mt-2">
                                                <small class="text-muted">
                                                    <i class="bi bi-tags me-1"></i>@movie.GenresString
                                                </small>
                                            </p>
                                        }
                                        <p class="card-text">
                                            <small class="text-muted">
                                                <i class="bi bi-info-circle me-1"></i>
                                                ID: @movie.Id | TMDB: @movie.TmdbId
                                            </small>
                                        </p>
                                        
                                        <button class="btn btn-danger btn-sm w-100 mt-2"
                                                @onclick="() => RemoveFromFavorites(movie.Id)" 
                                                disabled="@_isProcessing">
                                            <i class="bi bi-heart-fill me-1"></i>
                                            Remove from Favorites
                                        </button>
                                        
                                        <button class="btn btn-sm btn-warning w-100 mt-2"
                                                @onclick="() => ViewDetails(movie.TmdbId)">
                                            Details
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <div class="d-flex justify-content-center mt-4">
                    <a href="/" class="btn btn-outline-primary">
                        <i class="bi bi-arrow-left me-2"></i>
                        Back to All Movies
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private List<Movie>? _favorites;
    private string? _userId;
    private bool _isProcessing;
    private Timer? _messageTimer;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthProvider.GetAuthenticationStateAsync();
        _userId = authState.User.FindFirst(ClaimTypes.NameIdentifier)?.Value;

        if (_userId != null)
            _favorites = await MovieService.GetUserFavoritesAsync(_userId);
    }

    private async Task RemoveFromFavorites(int movieId)
    {
        if (_userId == null || _isProcessing) return;

        _isProcessing = true;
        try
        {
            var movie = _favorites?.FirstOrDefault(m => m.Id == movieId);
            if (movie == null) return;

            await MovieService.RemoveFavoriteAsync(_userId, movieId);
            _favorites = await MovieService.GetUserFavoritesAsync(_userId);
            
            ShowTemporaryMessage();
        }
        catch (Exception)
        {
            ShowTemporaryMessage();
        }
        finally
        {
            _isProcessing = false;
        }
    }

    private void ViewDetails(int movieId)
    {
        Navigation.NavigateTo($"/details/{movieId}");
    }

    private void ShowTemporaryMessage()
    {
        StateHasChanged();

        _messageTimer?.Dispose();
        _messageTimer = new Timer(async void (_) =>
        {
            await InvokeAsync(() =>
            {
                StateHasChanged();
            });
        }, null, TimeSpan.FromSeconds(3), Timeout.InfiniteTimeSpan);
    }

    public void Dispose()
    {
        _messageTimer?.Dispose();
    }
}