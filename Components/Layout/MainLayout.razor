@inherits LayoutComponentBase
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthProvider

<PageTitle>Reelr</PageTitle>

<div class="d-flex flex-column min-vh-100">
    <header class="navbar navbar-expand-lg navbar-dark bg-dark px-3 px-md-4 shadow-sm sticky-top">
        <a class="navbar-brand fw-bold text-light" href="/">
            <i class="bi bi-film me-2"></i>Reelr
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link @(Navigation.Uri.Contains("favorites") ? "active" : "")" href="/favorites">
                        <i class="bi bi-heart me-1"></i> Favorites
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(Navigation.Uri.Contains("random") ? "active" : "")" href="/random">
                        <i class="bi bi-heart me-1"></i> Random movie
                    </a>
                </li>
            </ul>

            <AuthorizeView>
                <Authorized>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link disabled text-light">
                                <i class="bi bi-person-circle me-1"></i>
                                @context.User.Identity?.Name
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/Logout">
                                <i class="bi bi-box-arrow-right me-1"></i> Logout
                            </a>
                        </li>
                    </ul>
                </Authorized>
                <NotAuthorized>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/Login">
                                <i class="bi bi-box-arrow-in-right me-1"></i> Login / Register
                            </a>
                        </li>
                    </ul>
                </NotAuthorized>
            </AuthorizeView>
        </div>
    </header>

    <main class="flex-fill">
        @Body
    </main>

    <footer class="bg-dark text-light text-center py-1 mt-auto">
        <small>&copy; @DateTime.Now.Year Reelr</small>
    </footer>
</div>
